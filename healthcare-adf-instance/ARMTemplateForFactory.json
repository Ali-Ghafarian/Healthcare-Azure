{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "healthcare-adf-instance"
		},
		"hos_db_generic_ls_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'hos_db_generic_ls'"
		},
		"storagegen2_ls_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'storagegen2_ls'"
		},
		"healthcare_adb_ls_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'healthcare_adb_ls'"
		},
		"hos_db_generic_ls_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "healthcare-project-sqlserver.database.windows.net"
		},
		"hos_db_generic_ls_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "@{linkedService().db_name}"
		},
		"hos_db_generic_ls_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "alighafarian"
		},
		"storagegen2_ls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://healthcarestoragegen2.dfs.core.windows.net/"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/hos_db_generic_ls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "A generic linked service (for emr datasets- hosa and hosb). Databases names will be passed in pipeline.",
				"parameters": {
					"db_name": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"server": "[parameters('hos_db_generic_ls_properties_typeProperties_server')]",
					"database": "[parameters('hos_db_generic_ls_properties_typeProperties_database')]",
					"encrypt": "mandatory",
					"trustServerCertificate": false,
					"authenticationType": "SQL",
					"userName": "[parameters('hos_db_generic_ls_properties_typeProperties_userName')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('hos_db_generic_ls_password')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/storagegen2_ls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "an ls that I can use to move data from emr databases to datalake",
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('storagegen2_ls_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('storagegen2_ls_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/healthcare_adb_ls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureDatabricksDeltaLake",
				"typeProperties": {
					"domain": "https://adb-1389449995721423.3.azuredatabricks.net",
					"clusterId": "0316-233535-n1fo6bmu",
					"accessToken": {
						"type": "SecureString",
						"value": "[parameters('healthcare_adb_ls_accessToken')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}